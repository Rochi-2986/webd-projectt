<body>
    <div class="navbar">
        <img src="images\logo.png" id="logo">
        
            <form action="/home" method="get"><a href="/home">Home</a></form>
            <form action="/about" method="get"><a href="/about">About</a></form>
            <form action="/service" method="get"><a href="/service">Services</a></form>
            <form action="/contact" method="get"><a href="/contact">Contact</a></form>
    
